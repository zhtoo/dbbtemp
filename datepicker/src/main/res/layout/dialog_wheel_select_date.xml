<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_normal_style"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/date_select_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <com.zht.datepicker.WheelView
            android:id="@+id/select_date_wheel_year_wheel"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/wheel_bg"
                android:textColor="@color/wheel_bg"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="年"
                android:textColor="@color/wheel_select_text"
                android:gravity="center_vertical"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/wheel_bg"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>
        </LinearLayout>


        <com.zht.datepicker.WheelView
            android:id="@+id/select_date_month_wheel"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/wheel_bg"
                android:textColor="@color/wheel_bg"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="月"
                android:textColor="@color/wheel_select_text"
                android:gravity="center_vertical"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/wheel_bg"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>
        </LinearLayout>

        <com.zht.datepicker.WheelView
            android:id="@+id/select_date_day_wheel"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/wheel_bg"
                android:textColor="@color/wheel_bg"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="日"
                android:textColor="@color/wheel_select_text"
                android:gravity="center_vertical"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/wheel_bg"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@color/cutting_line"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@color/cutting_line"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_select_layout"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/select_date_cancel"
            style="@style/dialog_left_btn_style" />

        <View style="@style/dialog_cutting_line_style" />

        <Button
            android:id="@+id/select_date_sure"
            style="@style/dialog_right_btn_style" />
    </LinearLayout>

</RelativeLayout>