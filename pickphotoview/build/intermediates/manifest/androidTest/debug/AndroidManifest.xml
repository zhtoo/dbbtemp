<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.werb.pickphotoview.test" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <instrumentation
        android:name="android.support.test.runner.AndroidJUnitRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.werb.pickphotoview.test"
        android:targetPackage="com.werb.pickphotoview.test" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.werb.pickphotoview.PickPhotoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PickAppThemeBottom" />
        <activity
            android:name="com.werb.pickphotoview.PickListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PickAppThemeRight" />
        <activity
            android:name="com.werb.pickphotoview.PickPhotoPreviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PickAppThemeRight" />
    </application>

</manifest>