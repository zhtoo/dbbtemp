<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/detail_video_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/detail_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/y26"
        android:layout_marginBottom="@dimen/y30"
        android:orientation="horizontal">

        <View
            style="@style/horizontalLine"
            android:layout_width="@dimen/x127"/>

        <TextView
            android:id="@+id/detail_video_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginRight="@dimen/x27"
            android:text="我是标题"
            android:textColor="@color/textGray"
            android:textSize="@dimen/x24"/>

        <View
            style="@style/horizontalLine"
            android:layout_width="@dimen/x127"/>


    </LinearLayout>

    <!--图片-->
    <RelativeLayout
        android:id="@+id/video_pic_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y350">

        <ImageView
            android:id="@+id/video_pic"
            android:layout_width="@dimen/x598"
            android:layout_height="@dimen/y348"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_video_bg"/>

        <TextView
            android:id="@+id/video_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x90"
            android:layout_marginTop="@dimen/y280"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/x550"
            android:singleLine="true"
            android:text="asjfdasjasddasdsadsadasdasfvsdvsdfsdfsdfafasdasdasdasdasdasdasdasdasdasdsadsadsadsadasdasdsadaas"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x26"/>

    </RelativeLayout>

</LinearLayout>