<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--内容部分-->

            <!--获取数据部门+评估依据标准-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y160"
                android:background="#F3F4F6">

                <TextView
                    android:id="@+id/evaluate_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/y35"
                    android:text="客户姓名:"
                    android:textSize="@dimen/x28"/>

                <TextView
                    android:id="@+id/evaluate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginTop="@dimen/y35"
                    android:layout_toRightOf="@id/evaluate_name_text"
                    android:text="张三"
                    android:textSize="@dimen/x28"/>


                <TextView
                    android:id="@+id/evaluate_manager_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/evaluate_name_text"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/y30"
                    android:text="客户经理:"
                    android:textSize="@dimen/x28"/>

                <TextView
                    android:id="@+id/evaluate_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/evaluate_name"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginTop="@dimen/y30"
                    android:layout_toRightOf="@id/evaluate_manager_text"
                    android:text="李四"
                    android:textSize="@dimen/x28"/>


                <Button
                    android:id="@+id/evaluation_standard"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/x46"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/y35"
                    android:background="#E2570F"
                    android:text="评估依据标准"
                    android:textColor="#FFF"
                    android:textSize="@dimen/x23"/>

            </RelativeLayout>

            <View style="@style/horizontalLine"/>

            <!--参考列表-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--房贷时间-->
                <LinearLayout
                    style="@style/evaluationContainer">

                    <TextView
                        style="@style/evaluationText01"
                        android:text="房贷时间:"/>

                    <View style="@style/autoFillStyle"/>

                    <TextView
                        style="@style/evaluationText02"
                        android:text="额度:"/>

                    <EditText
                        style="@style/evaluationEdit"
                        android:hint="请输入"/>

                    <TextView
                        style="@style/evaluationText03"
                        android:text="万元"/>

                </LinearLayout>

                <com.hs.doubaobao.view.MyRadioGroup
                    android:id="@+id/radio_mortgage_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_mortgage_time01"
                        style="@style/radio_bt_style"
                        android:text="6-12/月"/>

                    <RadioButton
                        android:id="@+id/radio_mortgage_time02"
                        style="@style/radio_bt_style"
                        android:layout_toRightOf="@id/radio_mortgage_time01"
                        android:text="12-24/月"/>

                    <RadioButton
                        android:id="@+id/radio_mortgage_time03"
                        style="@style/radio_bt_style"
                        android:layout_below="@id/radio_mortgage_time01"
                        android:text="24以上/月"/>

                    <RadioButton
                        android:id="@+id/radio_mortgage_time04"
                        style="@style/radio_bt_style"
                        android:layout_below="@id/radio_mortgage_time02"
                        android:layout_toRightOf="@id/radio_mortgage_time03"
                        android:text="全款"/>
                </com.hs.doubaobao.view.MyRadioGroup>

                <!--房产位置-->
                <LinearLayout
                    style="@style/evaluationContainer">

                    <TextView
                        style="@style/evaluationText01"
                        android:text="房产位置:"/>

                    <View style="@style/autoFillStyle"/>

                    <TextView
                        style="@style/evaluationText02"
                        android:text="额度:"/>

                    <EditText
                        style="@style/evaluationEdit"
                        android:hint="请输入"/>

                    <TextView
                        style="@style/evaluationText03"
                        android:text="万元"/>

                </LinearLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_housing_location01"
                        style="@style/radio_bt_style"
                        android:text="合肥市"/>

                    <RadioButton
                        android:id="@+id/radio_housing_location02"
                        style="@style/radio_bt_style"
                        android:text="三县"/>

                    <View
                        style="@style/autoFillStyle"/>

                    <LinearLayout
                        android:layout_width="@dimen/x320"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="市场均价："/>


                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请输入"
                            android:textSize="@dimen/x28"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/x30"
                            android:text="元"/>


                    </LinearLayout>

                </RadioGroup>

                <!--房产性质-->
                <LinearLayout
                    style="@style/evaluationContainer">

                    <TextView
                        style="@style/evaluationText01"
                        android:text="房产性质:"/>

                    <View style="@style/autoFillStyle"/>

                    <TextView
                        style="@style/evaluationText02"
                        android:text="额度:"/>

                    <EditText
                        style="@style/evaluationEdit"
                        android:hint="请输入"/>

                    <TextView
                        style="@style/evaluationText03"
                        android:text="万元"/>

                </LinearLayout>

                <com.hs.doubaobao.view.MyRadioGroup
                    android:id="@+id/radio_house_properties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_house_properties01"
                        style="@style/radio_bt_style"
                        android:text="回迁房"/>

                    <RadioButton
                        android:id="@+id/radio_house_properties02"
                        style="@style/radio_bt_style"
                        android:layout_toRightOf="@id/radio_house_properties01"
                        android:text="公寓"/>

                    <RadioButton
                        android:id="@+id/radio_house_properties03"
                        style="@style/radio_bt_style"
                        android:layout_below="@id/radio_house_properties01"
                        android:text="住宅"/>

                    <RadioButton
                        android:id="@+id/radio_house_properties04"
                        style="@style/radio_bt_style"
                        android:layout_width="@dimen/x220"
                        android:layout_below="@id/radio_house_properties02"
                        android:layout_toRightOf="@id/radio_house_properties03"
                        android:text="单位集资房"/>
                </com.hs.doubaobao.view.MyRadioGroup>

                <!--车辆-->
                <LinearLayout
                    style="@style/evaluationContainer">

                    <TextView
                        style="@style/evaluationText01"
                        android:text="车辆:"/>

                    <View style="@style/autoFillStyle"/>

                    <TextView
                        style="@style/evaluationText02"
                        android:text="额度:"/>

                    <EditText
                        style="@style/evaluationEdit"
                        android:hint="请输入"/>

                    <TextView
                        style="@style/evaluationText03"
                        android:text="万元"/>

                </LinearLayout>

                <com.hs.doubaobao.view.MyRadioGroup
                    android:id="@+id/radio_car_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_car_value01"
                        style="@style/radio_bt_style"
                        android:text="5万以下"/>

                    <RadioButton
                        android:id="@+id/radio_car_value02"
                        style="@style/radio_bt_style"
                        android:layout_toRightOf="@id/radio_car_value01"
                        android:text="5-10万"/>

                    <RadioButton
                        android:id="@+id/radio_car_value03"
                        style="@style/radio_bt_style"
                        android:layout_below="@id/radio_car_value01"
                        android:text="10-20万"/>

                    <RadioButton
                        android:id="@+id/radio_car_value04"
                        style="@style/radio_bt_style"

                        android:layout_below="@id/radio_car_value02"
                        android:layout_toRightOf="@id/radio_car_value03"
                        android:text="20万以上"/>
                </com.hs.doubaobao.view.MyRadioGroup>

                <!--家庭情况-->
                <LinearLayout
                    style="@style/evaluationContainer">

                    <TextView
                        style="@style/evaluationText01"
                        android:text="家庭情况:"/>

                    <View style="@style/autoFillStyle"/>

                    <TextView
                        style="@style/evaluationText02"
                        android:text="额度:"/>

                    <EditText
                        style="@style/evaluationEdit"
                        android:hint="请输入"/>

                    <TextView
                        style="@style/evaluationText03"
                        android:text="万元"/>

                </LinearLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/family_status01"
                        style="@style/radio_bt_style"
                        android:text="已婚"/>

                    <RadioButton
                        android:id="@+id/family_status02"
                        style="@style/radio_bt_style"
                        android:text="未婚"/>

                </RadioGroup>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="孩子"
                    android:textColor="#777777"
                    android:theme="@style/MyCheckBox"/>

                <!--单位性质-->
                <LinearLayout
                    style="@style/evaluationContainer">

                    <TextView
                        style="@style/evaluationText01"
                        android:text="单位性质:"/>

                    <View style="@style/autoFillStyle"/>

                    <TextView
                        style="@style/evaluationText02"
                        android:text="额度:"/>

                    <EditText
                        style="@style/evaluationEdit"
                        android:hint="请输入"/>

                    <TextView
                        style="@style/evaluationText03"
                        android:text="万元"/>

                </LinearLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/unit_nature01"
                        style="@style/radio_bt_style"
                        android:layout_width="@dimen/x220"
                        android:text="国企/公务员"/>

                    <RadioButton
                        android:id="@+id/unit_nature02"
                        style="@style/radio_bt_style"
                        android:text="民营"/>

                </RadioGroup>

                <LinearLayout
                    style="@style/evaluationContainer">

                    <CheckBox
                        android:layout_width="@dimen/x220"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="社保"
                        android:textColor="#777777"
                        android:theme="@style/MyCheckBox"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="公积金"
                        android:textColor="#777777"
                        android:theme="@style/MyCheckBox"/>

                </LinearLayout>

                <!--私人业主-->
                <LinearLayout
                    style="@style/evaluationContainer">

                    <TextView
                        style="@style/evaluationText01"
                        android:text="私人业主:"/>

                    <View style="@style/autoFillStyle"/>

                    <TextView
                        style="@style/evaluationText02"
                        android:text="额度:"/>

                    <EditText
                        style="@style/evaluationEdit"
                        android:hint="请输入"/>

                    <TextView
                        style="@style/evaluationText03"
                        android:text="万元"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/evaluationContainer">

                    <CheckBox
                        android:layout_width="@dimen/x220"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="营业执照"
                        android:textColor="#777777"
                        android:theme="@style/MyCheckBox"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="实体经营"
                        android:textColor="#777777"
                        android:theme="@style/MyCheckBox"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--征信报告-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y90"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/y22"
                        android:src="@drawable/evaluation_left"/>

                    <TextView
                        style="@style/referenceText1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginRight="@dimen/x20"
                        android:text="征信报告"/>

                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/y22"
                        android:src="@drawable/evaluation_right"/>

                </LinearLayout>

                <!--信用卡负债-->
                <LinearLayout
                    style="@style/evaluationContainer">

                    <TextView
                        style="@style/evaluationText01"
                        android:text="信用卡负债:"/>

                    <View style="@style/autoFillStyle"/>

                    <TextView
                        style="@style/evaluationText02"
                        android:text="额度:"/>

                    <EditText
                        style="@style/evaluationEdit"
                        android:hint="请输入"/>

                    <TextView
                        style="@style/evaluationText03"
                        android:text="万元"/>

                </LinearLayout>


                <com.hs.doubaobao.view.MyRadioGroup
                    android:id="@+id/radio_credit_liability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_credit_liability01"
                        style="@style/radio_bt_style"
                        android:text="50%"/>

                    <RadioButton
                        android:id="@+id/radio_credit_liability02"
                        style="@style/radio_bt_style"
                        android:layout_toRightOf="@id/radio_credit_liability01"
                        android:text="60%"/>

                    <RadioButton
                        android:id="@+id/radio_credit_liability03"
                        style="@style/radio_bt_style"
                        android:layout_toRightOf="@id/radio_credit_liability02"
                        android:text="70%"/>

                    <RadioButton
                        android:id="@+id/radio_credit_liability04"
                        style="@style/radio_bt_style"
                        android:layout_below="@id/radio_credit_liability01"
                        android:text="80%"/>

                    <RadioButton
                        android:id="@+id/radio_credit_liability05"
                        style="@style/radio_bt_style"
                        android:layout_below="@id/radio_credit_liability02"
                        android:layout_toRightOf="@id/radio_credit_liability04"
                        android:text="90%"/>
                </com.hs.doubaobao.view.MyRadioGroup>

                <!--查询次数-->
                <TextView
                    style="@style/referenceText1"
                    android:layout_height="@dimen/y90"
                    android:text="查询次数"
                    android:textColor="#000000"/>

                <!--近一个月(次):-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y90"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/loanEvaluationQueryText01"
                        android:text="近一个月:"/>
                    <View style="@style/autoFillStyle"/>
                    <EditText
                        style="@style/loanEvaluationQueryEdit"/>

                    <TextView
                        style="@style/loanEvaluationQueryText02"
                        android:text="次"/>

                </LinearLayout>


                <!--近三个月(次):-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y90"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/loanEvaluationQueryText01"
                        android:text="近三个月:"/>
                    <View style="@style/autoFillStyle"/>
                    <EditText
                        style="@style/loanEvaluationQueryEdit"/>

                    <TextView
                        style="@style/loanEvaluationQueryText02"
                        android:text="次"/>

                </LinearLayout>
                <!--个人查询近三个月(次)：-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y90"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/loanEvaluationQueryText01"
                        android:text="个人查询近三个月:"/>
                    <View style="@style/autoFillStyle"/>
                    <EditText
                        style="@style/loanEvaluationQueryEdit"/>

                    <TextView
                        style="@style/loanEvaluationQueryText02"
                        android:text="次"/>

                </LinearLayout>
                <!--个人查询共(次)：-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y90"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/loanEvaluationQueryText01"
                        android:text="个人查询共:"/>

                    <View style="@style/autoFillStyle"/>

                    <EditText
                        style="@style/loanEvaluationQueryEdit"/>

                    <TextView
                        style="@style/loanEvaluationQueryText02"
                        android:text="次"/>

                </LinearLayout>

            </LinearLayout>

            <View style="@style/horizontalLine"/>
            <!--汇总额度-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/loanEvaluationQueryText01"
                    android:text="汇总额度:"/>

                <View style="@style/autoFillStyle"/>

                <EditText
                    style="@style/loanEvaluationQueryEdit"
                    android:hint="5.05"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万元"/>

            </LinearLayout>

            <View style="@style/horizontalLine"/>
            <!--网拉征信-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="#FFF"
                    android:layout_height="@dimen/y90"
                    style="@style/referenceItem">

                    <TextView
                        style="@style/referenceText1"
                        android:layout_centerVertical="true"
                        android:text="网拉征信"
                        android:textColor="#000000"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="@dimen/y90"
                    android:background="#FFF"
                    style="@style/referenceItem">

                    <TextView
                        android:layout_centerVertical="true"
                        style="@style/referenceText1"
                        android:text="账号:"/>

                    <EditText
                        style="@style/referenceEditText5"
                        android:layout_centerVertical="true"
                        android:hint="未填写"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="@dimen/y90"
                    android:background="#FFF"
                    style="@style/referenceItem">

                    <TextView
                        android:layout_centerVertical="true"
                        style="@style/referenceText1"
                        android:text="密码:"/>

                    <EditText
                        android:layout_centerVertical="true"
                        style="@style/referenceEditText5"
                        android:hint="未填写"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="@dimen/y90"
                    android:background="#FFF"
                    style="@style/referenceItem">

                    <TextView
                        android:layout_centerVertical="true"
                        style="@style/referenceText1"
                        android:text="验证码:"/>

                    <EditText
                        style="@style/referenceEditText5"
                        android:layout_centerVertical="true"
                        android:hint="未填写"/>

                </RelativeLayout>


            </LinearLayout>

            <!--社保-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_height="@dimen/y90"
                    android:background="#FFF"
                    style="@style/referenceItem">

                    <TextView
                        style="@style/referenceText1"
                        android:layout_centerVertical="true"
                        android:textColor="#000000"
                        android:text="社保"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="@dimen/y90"
                    android:background="#FFF"
                    style="@style/referenceItem">

                    <EditText
                        style="@style/referenceEditText5"
                        android:layout_centerVertical="true"
                        android:hint="未填写"/>

                    <TextView
                        style="@style/referenceText1"
                        android:layout_centerVertical="true"
                        android:text="账号:"/>

                </RelativeLayout>

                <RelativeLayout
                    android:background="#FFF"
                    android:layout_height="@dimen/y90"
                    style="@style/referenceItem">

                    <TextView
                        style="@style/referenceText1"
                        android:layout_centerVertical="true"
                        android:text="密码:"/>

                    <EditText
                        style="@style/referenceEditText5"
                        android:layout_centerVertical="true"
                        android:hint="未填写"/>

                </RelativeLayout>

            </LinearLayout>

            <!--公积金-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="#FFF"
                    android:layout_height="@dimen/y90"
                    style="@style/referenceItem">

                    <TextView
                        style="@style/referenceText1"
                        android:layout_centerVertical="true"
                        android:text="公积金"
                        android:textColor="#000000"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="@dimen/y90"
                    android:background="#FFF"
                    style="@style/referenceItem">

                    <TextView
                        style="@style/referenceText1"
                        android:layout_centerVertical="true"
                        android:text="账号:"/>

                    <EditText
                        style="@style/referenceEditText5"
                        android:layout_centerVertical="true"
                        android:hint="未填写"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="@dimen/y90"
                    android:background="#FFF"
                    style="@style/referenceItem">

                    <TextView
                        style="@style/referenceText1"
                        android:layout_centerVertical="true"
                        android:text="密码:"/>

                    <EditText
                        style="@style/referenceEditText5"
                        android:layout_centerVertical="true"
                        android:hint="未填写"/>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"/>

</LinearLayout>