<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >

    <!-- 填充 -->
    <solid android:color="@color/Orange" /> <!-- 定义填充的颜色值 -->

    <size android:height="20dp" />

    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="@dimen/x10"
        android:bottomRightRadius="@dimen/x10"
        android:topLeftRadius="@dimen/x10"
        android:topRightRadius="@dimen/x10" /> <!-- 设置四个角的半径 -->

    <!-- 间隔 -->
    <padding
        android:bottom="2dp"
        android:left="@dimen/x21"
        android:right="5dp"
        android:top="2dp" /> <!-- 设置各个方向的间隔 -->

</shape>