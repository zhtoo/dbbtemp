<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFF"
              android:orientation="vertical"
              android:stretchColumns="*">

    <!--总表-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/lineBackground"
        android:orientation="vertical">
        <!--第一行-->
        <LinearLayout
            style="@style/evaluationStandardRow">

            <TextView
                android:text="营业执照/5000"
                style="@style/evaluationStandardRowText01"/>

            <TextView
                style="@style/evaluationStandardRowText01"
                android:text="社保/5000"/>

            <TextView
                android:text="公积金/5000"
                style="@style/evaluationStandardRowText02"/>

        </LinearLayout>
        <!--第二行-->
        <LinearLayout
            style="@style/evaluationStandardRow">

            <TextView
                style="@style/evaluationStandardRowText01"
                android:text="孩子/5000"/>

            <TextView
                style="@style/evaluationStandardRowText01"
                android:text="合肥市房产/9000"/>

            <TextView
                style="@style/evaluationStandardRowText02"
                android:text="三县/7000"/>

        </LinearLayout>
        <!--第三行-->
        <LinearLayout
            style="@style/evaluationStandardRow">

            <TextView
                style="@style/evaluationStandardRowText02"
                android:text="回迁房/公寓/单位集资房5000"/>

        </LinearLayout>
        <!--第四行-->
        <LinearLayout
            style="@style/evaluationStandardRow">

            <TextView
                style="@style/evaluationStandardRowText02"
                android:text="个人征信信用卡负债"/>

        </LinearLayout>
        <!--第五行-->
        <LinearLayout
            style="@style/evaluationStandardRow">

            <TextView
                style="@style/evaluationStandardRowText01"
                android:text="50%/5000"/>

            <TextView
                style="@style/evaluationStandardRowText01"
                android:text="60%/4000"/>

            <TextView
                style="@style/evaluationStandardRowText02"
                android:text="70%/4000"/>

        </LinearLayout>
        <!--第六行-->
        <LinearLayout
            style="@style/evaluationStandardRow">

            <TextView
                style="@style/evaluationStandardRowText01"
                android:text="80%/2000"/>

            <TextView
                style="@style/evaluationStandardRowText02"
                android:layout_weight="1"
                android:text="90%/1000"/>
            <TextView
                style="@style/evaluationStandardRowText02"
                android:layout_weight="1"
                android:text=""/>

        </LinearLayout>
        <!--第七行-->
        <LinearLayout
            style="@style/evaluationStandardRow">

            <TextView
                android:text="房贷时间"
                style="@style/evaluationStandardRowText02"/>

        </LinearLayout>
        <!--第八行-->
        <LinearLayout
            style="@style/evaluationStandardRow">

            <TextView
                android:text="6-12月/5000"
                style="@style/evaluationStandardRowText01"/>

            <TextView
                style="@style/evaluationStandardRowText01"
                android:text="12-24月/7000"/>

            <TextView
                android:text="24月以上/10000"
                style="@style/evaluationStandardRowText02"/>

        </LinearLayout>
        <!--第九行-->
        <LinearLayout
            style="@style/evaluationStandardRow">


            <TextView
                android:text="车辆"
                style="@style/evaluationStandardRowText02"/>

        </LinearLayout>
        <!--第十行-->
        <LinearLayout
            style="@style/evaluationStandardRow">

            <TextView
                android:text="5万/2000"
                style="@style/evaluationStandardRowText01"/>

            <TextView
                style="@style/evaluationStandardRowText01"
                android:text="5-10万/5000"/>

            <TextView
                android:text="10-20万/7000"
                style="@style/evaluationStandardRowText02"/>

        </LinearLayout>
        <!--第11行-->
        <LinearLayout
            android:layout_marginBottom="1dp"
            style="@style/evaluationStandardRow">

            <TextView
                android:text="20万以上/10000"
                style="@style/evaluationStandardRowText02"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>