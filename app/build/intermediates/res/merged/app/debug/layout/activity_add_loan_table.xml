<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFF"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--贷款人信息-->
                    <LinearLayout
                        android:id="@+id/add_lender_information"
                        style="@style/addLoanTable">

                        <ImageView
                            android:src="@drawable/ic_add_table01"
                            style="@style/addTableIcon"/>

                        <TextView
                            style="@style/addLoanTableText"
                            android:text="贷款人信息"/>

                    </LinearLayout>

                    <View style="@style/verticalLine"/>

                    <!--贷款事项-->
                    <LinearLayout
                        android:id="@+id/add_the_loans"
                        style="@style/addLoanTable">

                        <ImageView
                            style="@style/addTableIcon"
                            android:src="@drawable/ic_add_table02"/>

                        <TextView

                            style="@style/addLoanTableText"
                            android:text="贷款事项"/>

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/horizontalLine"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--联系人信息-->
                    <LinearLayout
                        android:id="@+id/add_contact_information"
                        style="@style/addLoanTable">

                        <ImageView
                            style="@style/addTableIcon"
                            android:src="@drawable/ic_add_table03"/>

                        <TextView
                            style="@style/addLoanTableText"
                            android:text="联系人信息"/>

                    </LinearLayout>

                    <View style="@style/verticalLine"/>

                    <!--客户调查情况及意见-->
                    <LinearLayout
                        android:id="@+id/add_investigation_and_opinion"
                        style="@style/addLoanTable">

                        <ImageView
                            style="@style/addTableIcon"
                            android:src="@drawable/ic_add_table04"/>

                        <TextView
                            style="@style/addLoanTableText"
                            android:text="客户调查情况及意见"/>

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/horizontalLine"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:gravity="center"
                android:text="补充以下资料完善信息录入"
                android:textColor="#9A8C80"
                android:background="#F3F4F6"
                android:textSize="@dimen/x28"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View style="@style/horizontalLine"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--贷款人信息-选填-->
                    <LinearLayout
                        android:id="@+id/add_lender_information_optional"
                        style="@style/addLoanTable">

                        <ImageView
                            style="@style/addTableIcon"
                            android:src="@drawable/ic_add_table05"/>

                        <TextView

                            style="@style/addLoanTableText"
                            android:text="贷款人信息-选填"/>

                    </LinearLayout>

                    <View style="@style/verticalLine"/>
                    <!--共同贷款人信息-->
                    <LinearLayout
                        android:id="@+id/add_mutual_lender_information"
                        style="@style/addLoanTable">

                        <ImageView
                            style="@style/addTableIcon"
                            android:src="@drawable/ic_add_table06"/>

                        <TextView
                            style="@style/addLoanTableText"
                            android:text="共同贷款人信息"/>

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/horizontalLine"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--车辆信息-->
                    <LinearLayout
                        android:id="@+id/add_car_information"
                        style="@style/addLoanTable">

                        <ImageView
                            style="@style/addTableIcon"
                            android:src="@drawable/ic_add_table07"/>

                        <TextView
                            style="@style/addLoanTableText"
                            android:text="车辆信息"/>

                    </LinearLayout>

                    <View style="@style/verticalLine"/>
                    <!--放款评估-->
                    <LinearLayout
                        android:id="@+id/add_loan_evaluation"
                        style="@style/addLoanTable">

                        <ImageView
                            style="@style/addTableIcon"
                            android:src="@drawable/ic_add_table08"/>

                        <TextView
                            style="@style/addLoanTableText"
                            android:text="放款评估"/>

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/horizontalLine"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--照片上传-->
                    <LinearLayout
                        android:id="@+id/add_upload_picture"
                        style="@style/addLoanTable">

                        <ImageView
                            style="@style/addTableIcon"
                            android:src="@drawable/ic_add_table09"/>

                        <TextView
                            style="@style/addLoanTableText"
                            android:text="照片上传"/>

                    </LinearLayout>

                    <View style="@style/verticalLine"/>
                    <!--视频上传-->
                    <LinearLayout
                        android:id="@+id/add_upload_vidoe"
                        style="@style/addLoanTable">

                        <ImageView
                            style="@style/addTableIcon"
                            android:src="@drawable/ic_add_table10"/>

                        <TextView
                            style="@style/addLoanTableText"
                            android:text="视频上传"/>

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/horizontalLine"/>

            </LinearLayout>

            <Button
                android:layout_marginTop="@dimen/y30"
                android:layout_marginBottom="@dimen/y30"
                android:layout_gravity="center"
                android:id="@+id/add_submit"
                android:layout_width="@dimen/x660"
                android:layout_height="@dimen/y98"
                android:gravity="center"
                android:background="@color/Orange"
                android:textColor="#FFF"
                android:text="提交"
                android:textSize="@dimen/x36"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>