<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <View
                style="@style/horizontalLine"
                android:background="#f3f4f5"
                android:layout_height="@dimen/x20"/>

            <View
                style="@style/horizontalLine"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x30"
                android:text="房产情况："
                android:textSize="@dimen/x28"/>

            <EditText
                style="@style/investigaOpinionEdit"
                android:hint="请输入"/>

            <View
                style="@style/horizontalLine"
                android:layout_marginLeft="@dimen/x30"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x30"
                android:text="车辆情况："
                android:textSize="@dimen/x28"/>

            <EditText
                style="@style/investigaOpinionEdit"
                android:hint="请输入"/>

            <View
                style="@style/horizontalLine"
                android:layout_marginLeft="@dimen/x30"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x30"
                android:text="面审情况及意见："
                android:textSize="@dimen/x28"/>

            <EditText
                style="@style/investigaOpinionEdit"
                android:hint="请输入"/>

            <View
                style="@style/horizontalLine"
                android:layout_marginLeft="@dimen/x30"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x30"
                android:text="家访客户情况汇总："
                android:textSize="@dimen/x28"/>

            <EditText
                style="@style/investigaOpinionEdit"
                android:hint="请输入"/>

            <View
                style="@style/horizontalLine"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x30"
                android:text="资料"
                android:textSize="@dimen/x28"/>

            <LinearLayout
                style="@style/investigaOpinionCheckBoxLayout">

                <CheckBox
                    android:text="房产证"
                    style="@style/investigaOpinionCheckBox"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="驾驶证"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="行驶证"/>

            </LinearLayout>

            <LinearLayout
                style="@style/investigaOpinionCheckBoxLayout">

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="身份证"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="户口本"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="结婚证"/>

            </LinearLayout>

            <LinearLayout
                style="@style/investigaOpinionCheckBoxLayout">

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="离婚证"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="离婚协议"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="单身证明"/>

            </LinearLayout>

            <LinearLayout
                style="@style/investigaOpinionCheckBoxLayout">

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="购房合同"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="银行按揭合同"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="银行卡"/>

            </LinearLayout>

            <LinearLayout
                style="@style/investigaOpinionCheckBoxLayout">

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="个人征信报告"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="银行流水"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="工作证明"/>

            </LinearLayout>

            <LinearLayout
                style="@style/investigaOpinionCheckBoxLayout">

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="社保"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="公积金"/>

                <CheckBox
                    style="@style/investigaOpinionCheckBox"
                    android:text="水电费单"/>

            </LinearLayout>

            <CheckBox
                style="@style/investigaOpinionCheckBox"
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/x50"
                android:text="其他"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"/>

</LinearLayout>