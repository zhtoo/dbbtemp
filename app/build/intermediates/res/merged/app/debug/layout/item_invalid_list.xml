<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_all"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y205"
              android:layout_margin="@dimen/x10"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y51"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x159"
            android:layout_height="@dimen/y53"
            android:background="@drawable/bg_invalid_time"
            android:gravity="center"
            android:text="2017-09-13"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                style="@style/horizontalLine"
                android:layout_marginTop="@dimen/y12"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@color/whiteBackground"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="借款用途"
                    android:textColor="@color/textGray"
                    android:textSize="12sp"/>

                <View style="@style/autoFillStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x16"
                    android:text="不通过"
                    android:textColor="@color/textGray"
                    android:textSize="12sp"/>

                <View style="@style/verticalLine"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/horizontalLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@color/whiteBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View style="@style/verticalLine"/>

        <LinearLayout
            android:layout_width="@dimen/x158"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y30"
                android:text="王伟义"
                android:textColor="@color/textGray"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:text="客户姓名"
                android:textColor="@color/textGray"
                android:textSize="12sp"/>

        </LinearLayout>

        <View
            style="@style/verticalLine"
            android:layout_height="@dimen/y88"/>

        <LinearLayout
            android:layout_width="@dimen/x230"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:text="23.00万元"
                android:textColor="@color/textGray"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借款金额"
                android:textColor="@color/textGray"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13800000100"
                android:textColor="@color/textGray"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户电话"
                android:textColor="@color/textGray"
                android:textSize="12sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/x216"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:text="18期"
                android:textColor="@color/textGray"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借款期数"
                android:textColor="@color/textGray"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李小艺"
                android:textColor="@color/textGray"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户经理"
                android:textColor="@color/textGray"
                android:textSize="12sp"/>

        </LinearLayout>

        <View style="@style/autoFillStyle"/>

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x64"
            android:src="@drawable/ic_invalid_arrow_selector"
            android:id="@+id/imageView"/>

        <View style="@style/verticalLine"/>

    </LinearLayout>

    <View style="@style/horizontalLine"/>

</LinearLayout>