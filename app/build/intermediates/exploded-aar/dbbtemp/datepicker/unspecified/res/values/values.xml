<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string-array name="weeks">
        <item>星期一</item>
        <item>星期二</item>
        <item>星期三</item>
        <item>星期四</item>
        <item>星期五</item>
        <item>星期六</item>
        <item>星期日</item>
    </string-array>
    <color name="button_ensure">#ff6000</color>
    <color name="cutting_line">#dfdfdf</color>
    <color name="wheel_bg">#f2f2f2</color>
    <color name="wheel_select_text">#ee7900</color>
    <color name="wheel_unselect_text">#c2c1c1</color>
    <string name="app_name">DatePicker</string>
    <style name="dialog_cutting_line_style">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/cutting_line</item>
    </style>
    <style name="dialog_left_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_button_bg</item>
        <item name="android:text">取消</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="dialog_normal_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/dialog_button_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="dialog_right_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_button_bg</item>
        <item name="android:text">确定</item>
        <item name="android:textColor">@color/button_ensure</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>